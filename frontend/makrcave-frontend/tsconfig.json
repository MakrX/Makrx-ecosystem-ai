{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "frontend/makrcave-frontend/*"
      ],
      "@makrx/ui": [
        "../../packages/ui"
      ],
      "@makrx/types": [
        "../../packages/types"
      ],
      "@makrx/utils": [
        "../../packages/utils"
      ],
      "@makrx/feature-flags": [
        "../../packages/feature-flags/src"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.config.*",
    "mocks"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
