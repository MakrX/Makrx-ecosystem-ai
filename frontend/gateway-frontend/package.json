{
    "name": "@makrx/gateway-frontend",
    "private": true,
    "version": "1.0.0",
    "description": "MakrX Gateway Frontend - Landing page and ecosystem navigation",
    "scripts": {
        "dev": "next dev -p 8080",
        "build": "next build",
        "start": "next start -p 8080",
        "typecheck": "tsc --noEmit",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build:analyze": "cross-env ANALYZE=true npm run build",
        "build:docker": "docker build -t makrx-gateway .",
        "docker:run": "docker run -p 8080:8080 makrx-gateway",
        "docker:compose": "docker-compose up -d",
        "lighthouse": "lhci autorun",
        "clean": "rm -rf .next out node_modules/.next",
        "export": "next build && next export",
        "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write ."
    },
    "dependencies": {
        "clsx": "^2.0.0",
        "cross-env": "^10.0.0",
        "eslint-config-next": "^15.4.7",
        "lucide-react": "^0.462.0",
        "next": "^14.2.32",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-helmet-async": "^2.0.4",
        "tailwind-merge": "^2.5.2"
    },
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^8.45.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "jsdom": "^23.0.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.11",
        "typescript": "^5.5.3",
        "vite": "^6.2.2",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=20",
        "npm": ">=9.0.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
