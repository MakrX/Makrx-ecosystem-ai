# MakrX Ecosystem Environment Configuration
# Copy this file to .env and fill in your actual values

# General Configuration
ENVIRONMENT=development
NODE_ENV=development

# Database Configuration
POSTGRES_DB=makrx_dev
POSTGRES_USER=makrx
POSTGRES_PASSWORD=your_secure_postgres_password_here
MAKRCAVE_DATABASE_URL=postgresql://makrx:your_secure_postgres_password_here@postgres:5432/makrx_dev
STORE_DATABASE_URL=postgresql+asyncpg://makrx:your_secure_postgres_password_here@postgres:5432/makrx_store_dev

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Authentication (Keycloak)
KEYCLOAK_ISSUER=https://auth.makrx.org/realms/makrx
KEYCLOAK_URL=https://auth.makrx.org/realms/makrx

# API URLs
MAKRCAVE_API_URL=https://api.makrcave.com
STORE_API_URL=https://api.makrx.store

# Secret Keys (Generate new ones for production!)
MAKRCAVE_SECRET_KEY=your_makrcave_secret_key_here_32_chars_min
STORE_SECRET_KEY=your_store_secret_key_here_32_chars_min

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# File Storage (S3/MinIO)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=makrx-uploads
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=us-east-1

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@makrx.org
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@makrx.org

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# Development Only (Don't use in production)
DEBUG=false
LOG_LEVEL=info
